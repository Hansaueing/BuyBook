<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_bookinfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_bar_top"
        android:gravity="center"
        android:text="详情介绍"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:id="@+id/tv_bookinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bookinfo_title" >

        <ImageView
            android:id="@+id/iv_bookinfo_pic"
            android:layout_width="130dp"
            android:layout_height="240dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_bookinfo_pic"
            android:layout_toRightOf="@+id/iv_bookinfo_pic"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginTop="55dp"
                android:id="@+id/rl_name_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bookinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="书名"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bookinfo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_bookinfo_name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="200.00$"
                    android:textSize="10sp"
                    android:textColor="#ff0000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bookinfo_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="作者:"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bookinfo_who"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_bookinfo_writer"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tv_bookinfo_writer"
                    android:text="谁写的"
                    android:textSize="10sp" />
            </RelativeLayout>
             <RelativeLayout
                android:id="@+id/rl_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bookinfo_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="类别:"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bookinfo_whichtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_bookinfo_type"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tv_bookinfo_type"
                    android:text="好书"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bookinfo_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="出版时间:"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bookinfo_whattime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_bookinfo_publish"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tv_bookinfo_publish"
                    android:text="1970-1-1"
                    android:textSize="10sp" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_publish_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bookinfo_publish_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="出版社:"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_bookinfo_which_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_bookinfo_publish_house"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tv_bookinfo_publish_house"
                    android:text="火星出版社"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/tv_jianjie"
        android:layout_below="@+id/tv_bookinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容简介"
        android:textSize="10sp"
        android:padding="10dp"
        android:background="#fffff0"
        />
    <TextView 
        android:id="@+id/tv_jianjieneirong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_jianjie"
        android:text="上了头疼疼的故事"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    
    
    
    
    
    
    
    
    
    
    
    

</RelativeLayout>